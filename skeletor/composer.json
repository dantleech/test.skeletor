{
    "name": "{{ package.name }}",
    "description": "{{ project.description }}",
    "license": "MIT",
    "authors": [
        {
            "name": "{{ author.name }}",
            "email": "{{ author.email }}"
        }
    ],
    "require": {
    },
    "require-dev": {
    },
    "autoload": {
        "psr-4": {
            "{{ project.namespace }}\\": "lib/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "{{ project.namespace }}\\Tests": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
